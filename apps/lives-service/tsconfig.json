{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src/",                // <- include the root of your repo
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"],
      "@shared/*": ["packages/shared/*"]
    }
  },
  "include": ["src/**/*"]
}
